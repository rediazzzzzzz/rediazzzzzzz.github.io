/* pages/community/community.wxss */
page {
  height: 100%;
}

.coat {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

.back {
    position:absolute;
    width:750rpx;
    height:270rpx;
    background-color:#7CC083;
    border-bottom-left-radius: 5%;
    border-bottom-right-radius: 5%;
    box-shadow: 0px 18rpx 22rpx 0px rgba(0, 0, 0, 0.1608);
}

.navig {
    position:relative;
    top:178rpx;
    white-space:nowrap;
}

.nav_item {
    width:100rpx;
    margin-left:100rpx;
    padding-top:30rpx;
    display:inline-block;
    color:white;
    font-size:40rpx;
    text-align:center;
}

.nav_item.active {
    border-bottom:10rpx solid #A2DAF5;
}

.bottom_nav {
    position:fixed;
    width:100%;
    height:126rpx;
    bottom:0;
    background-color:#F9F9F9;
    box-shadow: 0px 18rpx 22rpx 0px rgba(0, 0, 0, 0.5);
}

.bt_item {
    margin-left:130rpx;
    margin-top:10rpx;
    font-size:32rpx;
    display:inline-block;
}

.icon {
    width:64rpx;
    height:64rpx;
    display:block;
}

.bt_item_up {
    margin-left:140rpx;
    margin-top:0rpx;
    display:inline-block;
}

.icon_up {
    width:140rpx;
    height:140rpx;
    display:block;
}