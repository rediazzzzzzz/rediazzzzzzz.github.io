/* pages/recommend/recommend.wxss */

page {
  height: 100%;
}

.coat {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background-color:#FFF;
}

/*导航区*/

.back {
    position:absolute;
    width:750rpx;
    height:270rpx;
    background-color:#7CC083;
    border-bottom-left-radius: 5%;
    border-bottom-right-radius: 5%;
    box-shadow: 0px 18rpx 22rpx 0px rgba(0, 0, 0, 0.1608);
}

.navig {
    position:relative;
    top:178rpx;
    white-space:nowrap;
}

.nav_item {
    width:100rpx;
    margin-left:100rpx;
    padding-top:30rpx;
    display:inline-block;
    color:white;
    font-size:40rpx;
    text-align:center;
    
}

.active {
    border-bottom:10rpx solid #A2DAF5;
}

/*搜索区*/

.search {
    position:fixed;
    top:270rpx;
    width:100%;
    height:1050rpx;
    padding:40rpx;
    box-sizing: border-box;
}

.form {
    position:absolute;
    top:84rpx;
    left:56rpx;
    width:638rpx;
    height:66rpx;
    padding:10rpx;
    border: 1px solid #707070;
    border-radius: 20rpx;
    box-sizing: border-box;
}

.form_img {
    position:absolute;
    width:42rpx;
    height:42rpx;
    left:22rpx;
    display:inline-block;
}

.form_input {
    margin-left:70rpx;
    font-size:36rpx;
}

.sr {
    position:absolute;
    top:188rpx;
    font-size:34rpx;
    font-weight:bold;
}

.record {
    position:absolute;
    top:250rpx;
    left:70rpx;
    height:140rpx;
    white-space:nowrap;
}

.rec_item {
    height:76rpx;
    margin:10rpx;
    padding:30rpx;
    box-sizing: border-box;
    font-size:36rpx;
    line-height:12rpx;
    border: 1px solid #7CC083;
    border-radius: 40rpx;
    display:inline-block;
}

/*底部导航区*/

.bottom_nav {
    position:fixed;
    width:100%;
    height:126rpx;
    bottom:0;
    background-color:#F9F9F9;
    box-shadow: 0px 18rpx 22rpx 0px rgba(0, 0, 0, 0.5);
}

.bt_item_1 {
    position:absolute;
    margin-left:130rpx;
    margin-top:10rpx;
    font-size:32rpx;
    display:inline-block;
}

.bt_item_2 {
    position:absolute;
    margin-left:556rpx;
    margin-top:10rpx;
    font-size:32rpx;
    display:inline-block;
}

.icon {
    width:64rpx;
    height:64rpx;
    display:block;
}

.bt_item_up {
    position:absolute;
    margin-left:305rpx;
    margin-top:-50rpx;
    display:inline-block;
}

.icon_up {
    width:140rpx;
    height:140rpx;
    display:block;
}