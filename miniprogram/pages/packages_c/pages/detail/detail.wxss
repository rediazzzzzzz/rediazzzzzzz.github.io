.Dtitle {
    position:relative;
    margin-top:10rpx;
    margin-bottom:10rpx;
    font-size:40rpx;
    font-weight:bold;

    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;      /*标题最多显示一行*/
    -webkit-box-orient: vertical;
    align-content: center;
}

.Dcontent {
    position:relative;
    margin-top:24rpx;
    font-size:36rpx;
    letter-spacing: 0em;
}

.Dimg {
    position:relative;
    margin-top:30rpx;
    width:690rpx;
    height:340rpx;
}

.Dtag {
    position:relative;
    margin-top:10rpx;
    width:690rpx;
    box-sizing: border-box;
    white-space:nowrap;
}

.tag {
    margin:8rpx;
    padding:14rpx;
    line-height: 14rpx;
    height:44rpx;
    font-size:26rpx;
    border-radius: 32rpx;
    box-sizing: border-box;
    border: 2rpx solid #B2AAAA;
    
