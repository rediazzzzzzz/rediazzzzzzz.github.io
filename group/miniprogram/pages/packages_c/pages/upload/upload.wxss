/* pages/upload/upload.wxss */

page {
  height: 100%;
}

.coat {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background-color:white;
}

/*抬头*/

.back {
    position:fixed;
    width:750rpx;
    height:270rpx;
    background-color:#7CC083;
    border-bottom-left-radius: 5%;
    border-bottom-right-radius: 5%;
    box-shadow: 0px 18rpx 22rpx 0px rgba(0, 0, 0, 0.1608);
}

.title {
    position:absolute;
    font-size:50rpx;
    font-weight:bold;
    color:white;
    top:160rpx;
    left:275rpx;
}

/*用户信息*/

.user {
    position:fixed;
    width:590rpx;
    height:110rpx;
    top:340rpx;
    left:40rpx;
}

.head {
    position:absolute;
    width:100rpx;
    height:100rpx;
    border: 1px solid #707070;
    border-radius: 50%;
}

.name {
    position:absolute;
    top:8rpx;
    left:130rpx;
    font-size:32rpx;
    font-weight:bold;
}

.time {
    position:absolute;
    top:64rpx;
    left:130rpx;
    font-size:26rpx;
}

.post {
    position:fixed;
    top:460rpx;
    width:100%;
    height:986rpx;
    padding:40rpx;
}

.up_post {
    position:absolute;
}

.post_item {
    margin:30rpx;
    margin-bottom:50rpx;
}

.tip {
    font-size:44rpx;
}

.item1 {
    box-sizing: border-box;
    box-shadow: 0px 2px 4px 0px #B1D9B5;
    border-radius: 16rpx;
    width:460rpx;
    height:70rpx;
    border-radius: 16rpx;
    padding-left:24rpx;
    font-size:44rpx;
    display:inline-block;
}

.item2 {
    box-sizing: border-box;
    box-shadow: 0px 2px 4px 0px #B1D9B5;
    border-radius: 16rpx;
    width:460rpx;
    height:70rpx;
    border-radius: 16rpx;
    padding-left:24rpx;
    font-size:44rpx;
    display:inline-block;
}

.cube_img {
    margin:30rpx;
    width:254rpx;
    height:336rpx;
    box-shadow: 0px 2px 7px 0px #B1D9B5;
    display:inline-block;
}

.release {
    position:absolute;
    left:480rpx;
    font-size:40rpx;
    background: #7CC083;
    color:white;
}

.hover {
    background-color:green !important;
}