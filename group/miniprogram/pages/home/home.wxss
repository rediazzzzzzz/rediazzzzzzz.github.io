/* pages/home/home.wxss */

page {
  height: 100%;
}

.coat {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background-color:white;
}

/*抬头*/

.back {
    position:fixed;
    width:750rpx;
    height:370rpx;
    background-color:#7CC083;
    border-bottom-left-radius: 5%;
    border-bottom-right-radius: 5%;
    box-shadow: 0px 18rpx 22rpx 0px rgba(0, 0, 0, 0.1608);
}

.user {
    position:fixed;
    width:100%;
    height:200rpx;
    top:370rpx;
}

.head {
    position:absolute;
    top:-90rpx;
    left:295rpx;
    width:160rpx;
    height:160rpx;
    border: 1px solid #707070;
    border-radius: 50%;
    background:white;
}

.name {
    position:absolute;
    top:100rpx;
    left:80rpx;
    font-size:40rpx;
}

.credit {
    position:absolute;
    top:100rpx;
    left:340rpx;
    font-size:40rpx;
}

.obj {
    position:fixed;
    top:570rpx;
    width:100%;
}

.tip {
  position:absolute;
  top:10rpx;
  left:66rpx;
  font-size:42rpx;
  color: #7CC083;
}

/*浏览区*/

.scan {
  position: relative;
  top:60rpx;
  width:100%;
  height:800rpx;
}

.post {
  position:relative;
  margin-top:40rpx;
  margin-left:40rpx;
  width:670rpx;
  height:408rpx;
  background:white;
  border: 1px solid #707070;
  border-radius: 40rpx;
  padding:40rpx;
  box-sizing: border-box;
  display:block;
}

.time {
  position:absolute;
  top:24rpx;
  left:30rpx;
  font-size:26rpx;
}

/*版块-内容*/

.content {
  position:absolute;
  top:100rpx;
  width:590rpx;
  height:200rpx;
}

.title {
  position:absolute;
  font-size:34rpx;
  font-weight:bold;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
  
}

.intro {
  position:absolute;
  top:50rpx;
  font-size:30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  align-content: center;
  line-height: 1.6;
}

/*版块-操作*/

.opera {
  position:absolute;
  top:326rpx;
  width:590rpx;
  height:60rpx;
}

.zan {
  position:absolute;
  right: 50rpx;
  /*width: 160rpx;*/
  box-sizing: border-box;
  background-color:rgb(63, 51, 167,0);

}

.zan_img {
    position: relative;
    bottom:2rpx;
    right: 26rpx;
    width:46rpx;
    height:46rpx;
}

.zan_num {
    position: relative;
    right:20rpx;
    bottom:8rpx;
    font-size:32rpx;
}

.comment {
  position:absolute;
  left:540rpx;
  width:46rpx;
  height:46rpx;
}